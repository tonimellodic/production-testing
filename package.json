{
  "name": "synthetic-monitoring",
  "version": "0.0.1",
  "description": "Obtaining synthetic metrics using puppeteer and jest",
  "license": "Apache-2.0",
  "scripts": {
    "start": "yarn jest test/*test.js --maxWorkers 10",
    "unit-test": "UNIT=true yarn jest spec.js --maxWorkers 10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarn unit-test"
    }
  },
  "dependencies": {
    "auto-bind": "^2.0.0",
    "jest": "^24.5.0",
    "jest-puppeteer": "^4.0.0",
    "puppeteer": "^1.13.0"
  },
  "devDependencies": {
    "husky": "^1.3.0",
    "lint-staged": "^8.1.5",
    "prettier-standard": "^9.1.1",
    "standard": "^12.0.1"
  },
  "jest": {
    "preset": "jest-puppeteer",
    "setupFilesAfterEnv": [
      "<rootDir>/config.js"
    ]
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier-standard",
        "git add"
      ]
    }
  }
}
